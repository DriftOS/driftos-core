generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Add models below
model Conversation {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  branches  Branch[]
  
  @@map("conversations")
}

model Branch {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  parentId       String?
  parent         Branch?      @relation("BranchTree", fields: [parentId], references: [id])
  children       Branch[]     @relation("BranchTree")
  summary        String?
  centroid       Float[]
  messages       Message[]
  facts          Fact[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([conversationId])
  @@index([parentId])
  @@map("branches")
}

model Message {
  id        String   @id @default(cuid())
  branchId  String
  branch    Branch   @relation(fields: [branchId], references: [id])
  role      String
  content   String
  embedding Float[]
  
  // Drift routing decision
  driftAction String?  // 'STAY' | 'BRANCH' | 'ROUTE'
  driftReason String?  // Reason for the routing decision
  
  createdAt DateTime @default(now())

  @@index([branchId])
  @@map("messages")
}

model Fact {
  id         String   @id @default(cuid())
  branchId   String
  branch     Branch   @relation(fields: [branchId], references: [id])
  key        String
  value      String
  confidence Float
  messageId  String?
  createdAt  DateTime @default(now())

  @@index([branchId])
  @@map("facts")
}