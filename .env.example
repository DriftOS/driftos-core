# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=debug

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/driftos_core?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=driftos_core

# API
API_PREFIX=/api
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# Monitoring
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Swagger
SWAGGER_ENABLED=true
SWAGGER_PATH=/documentation

# Drift
DRIFT_MAX_BRANCHES_CONTEXT=10

# Embeddings
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2

# LLM
LLM_PROVIDER=groq
LLM_MODEL=meta-llama/llama-4-scout-17b-16e-instruct # OR meta-llama/llama-4-maverick-17b-128e-instruct
LLM_API_KEY=your_groq_api_key
LLM_TIMEOUT=5000